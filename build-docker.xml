<?xml version="1.0" encoding="UTF-8"?>
<project name="TA_project_web" default="deploy" basedir=".">

  <!-- ðŸ§± Cáº¥u hÃ¬nh thÆ° má»¥c -->
  <property name="src.dir" value="src" />
  <property name="web.dir" value="WebContent" />
  <property name="build.dir" value="build" />
  <property name="classes.dir" value="${build.dir}/classes" />
  <property name="war.dir" value="${build.dir}/war" />
  <property name="war.name" value="TA_project_web.war" />
  <!-- Docker environment - sá»­ dá»¥ng Tomcat trong container -->
  <property name="tomcat.home" value="/opt/tomcat" />
  <property name="tomcat.webapps" value="${tomcat.home}/webapps" />

  <!-- ðŸ§¹ Dá»n build -->
  <target name="clean">
    <delete dir="${build.dir}" />
  </target>

  <!-- âš™ï¸ BiÃªn dá»‹ch -->
  <target name="compile" depends="clean">
    <mkdir dir="${classes.dir}" />
    <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="false" encoding="UTF-8">
      <classpath>
        <fileset dir="${tomcat.home}/lib">
          <include name="*.jar" />
        </fileset>
        <!-- ThÃªm cÃ¡c JAR dependencies tá»« WebContent/WEB-INF/lib -->
        <fileset dir="${web.dir}/WEB-INF/lib">
          <include name="*.jar" />
        </fileset>
        <!-- ThÃªm servlet-api.jar tá»« lib -->
        <fileset dir="lib">
          <include name="*.jar" />
        </fileset>
      </classpath>
    </javac>
    <echo message="âœ… Compiled Java classes to ${classes.dir}" />
  </target>

  <!-- ðŸ“¦ Package WAR -->
  <target name="war" depends="compile">
    <mkdir dir="${war.dir}" />
    <war destfile="${war.dir}/${war.name}" webxml="${web.dir}/WEB-INF/web.xml">
      <fileset dir="${web.dir}">
        <exclude name="WEB-INF/web.xml" />
        <exclude name="WEB-INF/lib/*.jar" />
      </fileset>
      <classes dir="${classes.dir}" />
      <!-- Copy JAR dependencies -->
      <lib dir="${web.dir}/WEB-INF/lib" />
    </war>
    <echo message="âœ… WAR created at ${war.dir}/${war.name}" />
  </target>

  <!-- ðŸš€ Deploy lÃªn Tomcat (trong Docker container) -->
  <target name="deploy" depends="war">
    <copy file="${war.dir}/${war.name}" todir="${tomcat.webapps}" overwrite="true" />
    <echo message="ðŸš€ Deployed to Tomcat: ${tomcat.webapps}/${war.name}" />
  </target>

  <!-- ðŸ³ Target Ä‘áº·c biá»‡t cho Docker build -->
  <target name="docker-build" depends="war">
    <echo message="ðŸ³ Building for Docker deployment..." />
    <!-- KhÃ´ng cáº§n copy vÃ o tomcat.webapps vÃ¬ Dockerfile sáº½ lÃ m Ä‘iá»u nÃ y -->
    <echo message="âœ… Docker WAR ready at ${war.dir}/${war.name}" />
  </target>

</project>
